# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3001

# Admin Authentication
ADMIN_KEY=your-secret-admin-key-here

# Email Configuration - Choose one method:

# Method 1: Gmail (recommended for quick setup)
GMAIL_USER=your-gmail@gmail.com
GMAIL_PASS=your-app-specific-password

# Method 2: Custom SMTP Server
# SMTP_HOST=smtp.your-email-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-password

# Email Settings
FROM_EMAIL=noreply@vexaware.com

# Database (SQLite file will be created automatically)
DB_PATH=./database/newsletter.db

# Optional: Newsletter Configuration
REQUIRE_EMAIL_CONFIRMATION=true
SEND_WELCOME_EMAIL=true
MAX_SUBSCRIBERS_PER_IP=5