# Environment Configuration for Newsletter Services
# Copy this file to .env and fill in your API keys

# Choose your newsletter service provider
# Options: 'mailchimp', 'convertkit', 'sendgrid', 'custom', 'local'
VITE_NEWSLETTER_SERVICE=custom

# Backend API URL (for custom newsletter service)
VITE_API_URL=http://localhost:3001

# Mailchimp Configuration
VITE_MAILCHIMP_API_KEY=your_mailchimp_api_key_here
VITE_MAILCHIMP_AUDIENCE_ID=your_audience_id_here
VITE_MAILCHIMP_SERVER_PREFIX=us1

# ConvertKit Configuration
VITE_CONVERTKIT_API_KEY=your_convertkit_api_key_here
VITE_CONVERTKIT_FORM_ID=your_form_id_here

# SendGrid Configuration
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here
VITE_SENDGRID_LIST_ID=your_list_id_here

# Local/Custom API Configuration
VITE_CUSTOM_API_URL=http://localhost:3001/api/subscribe

# Optional: Email validation settings
VITE_REQUIRE_DOUBLE_OPTIN=true
VITE_SEND_WELCOME_EMAIL=true